{
    "name": "loilo/contao-illuminate-database-bundle",
    "description": "Use Laravel's Illuminate Database abstraction in Contao",
    "type": "contao-bundle",
    "require": {
        "illuminate/database": "^5.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4",
        "mockery/mockery": "^1.2",
        "contao/test-case": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Loilo\\ContaoIlluminateDatabaseBundle\\": "src/"
        },
        "files": [
            "src/Database/db.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Loilo\\ContaoIlluminateDatabaseBundle\\Test\\": "test/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Florian Reuschel",
            "email": "florian@loilo.de"
        }
    ],
    "extra": {
        "contao-manager-plugin": "Loilo\\ContaoIlluminateDatabaseBundle\\ContaoManager\\Plugin"
    }
}
